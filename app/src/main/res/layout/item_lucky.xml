<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:paddingTop="@dimen/dimen_4dp"
        android:paddingBottom="@dimen/dimen_4dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_14sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2019/11/07 18:30" />

        <TextView
            android:id="@+id/tvIssueNumber"
            android:layout_width="wrap_content"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_14sp"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/etCode1"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@drawable/et_code_bg_red"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"

            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp" />

        <TextView
            android:id="@+id/etCode2"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@drawable/et_code_bg_red"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"

            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp" />

        <TextView
            android:id="@+id/etCode3"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@drawable/et_code_bg_red"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"

            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp" />

        <TextView
            android:id="@+id/etCode4"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@drawable/et_code_bg_red"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"

            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp" />

        <TextView
            android:id="@+id/etCode5"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@drawable/et_code_bg_red"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"

            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp" />

        <TextView
            android:id="@+id/etCode6"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@drawable/et_code_bg_red"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp" />

        <View
            android:layout_width="@dimen/dimen_10dp"
            android:layout_height="@dimen/dimen_1dp" />

        <TextView
            android:id="@+id/etCode7"
            android:layout_width="@dimen/dimen_32dp"
            android:layout_height="@dimen/dimen_32dp"
            android:background="@drawable/et_code_bg"
            android:cursorVisible="false"
            android:enabled="false"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_11sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:background="@color/gray_f6f6f6"/>
</LinearLayout>
